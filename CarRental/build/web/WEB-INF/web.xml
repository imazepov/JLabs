<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AddCarAction</servlet-name>
        <servlet-class>carrental.view.AddCarAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCarAction</servlet-name>
        <servlet-class>carrental.view.RemoveCarAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCustomerAction</servlet-name>
        <servlet-class>carrental.view.AddCustomerAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCustomerAction</servlet-name>
        <servlet-class>carrental.view.RemoveCustomerAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRentalAction</servlet-name>
        <servlet-class>carrental.view.AddRentalAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveRentalAction</servlet-name>
        <servlet-class>carrental.view.RemoveRentalAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCarAction</servlet-name>
        <url-pattern>/AddCar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveCarAction</servlet-name>
        <url-pattern>/RemoveCar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCustomerAction</servlet-name>
        <url-pattern>/AddCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveCustomerAction</servlet-name>
        <url-pattern>/RemoveCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRentalAction</servlet-name>
        <url-pattern>/AddRental</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveRentalAction</servlet-name>
        <url-pattern>/RemoveRental</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
